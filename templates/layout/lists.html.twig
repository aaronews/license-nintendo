{% extends 'layout/layout.html.twig' %}

{% block javascripts %}
    <script src="{{asset('js/animated-card.js')}}"></script>
{% endblock %}

{% block body %}
    <main class="licenses-list list animated-mario-background" role="main">
        <div class="container-fluid p-0">
            <section class="list-header">
                <h2 class="p-3 text-center">
                    {% block title %}
                    {% endblock %}
                </h2>
                <div class="row justify-content-center p-2">
                    <div class="col-md-10 col-12 ">
                        {% block searchForm %}
                        {% endblock %}
                    </div>
                </div>
            </section>
            <section class="row ml-0 mr-0 justify-content-center list-block">
                {% block listBlock %}
                {% endblock %}
            </section>
        </div>
    </main>
{% endblock %}