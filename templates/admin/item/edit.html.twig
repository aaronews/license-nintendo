{% extends 'admin/layout/form.html.twig' %}

{% block title %}{{'admin.items.edit.title'|trans}} "{{item.name}}"{% endblock %}

{% block form %}
    {{ form_start(form)}}
        <div class="row">
            {{ form_row(form.name)}}
            {{ form_row(form.slug)}}
            {{ form_row(form.description)}}
            <div class="col-12">
                <div class="row align-items-center upload-container">
                    {{ form_row(form.uploadThumbnail)}}
                    {% include 'admin/layout/upload-preview.html.twig' with {
                        'thumbnailUrl' : asset(vich_uploader_asset(item, 'uploadThumbnail'))
                    }%}
                </div>
            </div>
            {{ form_row(form.submit)}}
        </div>
    {{ form_end(form)}}
{% endblock %}
