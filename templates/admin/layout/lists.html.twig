{% extends 'admin/layout/layout.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{asset('css/components/lists-backoffice.css')}}">
{% endblock %}

{% block javascripts %}
    <script src="{{asset('js/admin/lists.js')}}"></script>
{% endblock %}

{% block body %}
    <main class="list pt-0"
        {% block mainDataAttributes %}
        {% endblock %}
    >
        <div class="container-fluid">
            <section class="list-content">
                {% include 'admin/layout/flash-messages.html.twig' %}
                <h1 class="pt-3 pb-3 m-0 text-center">
                    {% block title %}
                    {% endblock %}
                </h1>
                <div class="row justify-content-md-center border-top-0 border m-0 p-3">
                    <div class="col-md-11">
                        <div class="list-header block-content list-group-item">
                            {% block listHeader %}
                            {% endblock %}
                        </div>
                        <div class="list-group">
                            {% block listRows %}
                            {% endblock %}
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </main>
{% endblock %}