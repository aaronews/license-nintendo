
{% extends 'admin/layout/layout.html.twig' %}

{% block stylesheets %}
    {{ encore_entry_link_tags('form-backoffice') }}
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('form-backoffice') }}
{% endblock %}

{% block body %}
    <main class="edit">
        <div class="container-fluid">
            <section class="form">
                {% include 'admin/layout/flash-messages.html.twig' %}
                <h1 class="text-center pt-3 pb-3 m-0">{% block title %}{% endblock %}</h1>
                <div class="row justify-content-center border-top-0 border m-0">
                    <div class="col-11 mt-4">
                        {% block form %}
                        {% endblock %}
                    </div>
                </div>
            </section>
        </div>
    </main>
{% endblock %}
