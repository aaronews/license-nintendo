{% extends 'admin/layout/form.html.twig' %}

{% block title %}
    {{'admin.games.items.edit.title'|trans|replace({
        '%GAME_NAME%' : gameItem.game.name,
        '%ITEM_NAME%' : gameItem.item.name
    })}}
{% endblock %}

{% block form %}
    {{ form_start(form)}}
        <div class="row">
            {{ form_row(form.item)}}
            <div class="col-12">
                <div class="row align-items-center">
                    {{ form_row(form.imageFile)}}
                    {% include 'admin/layout/upload-preview.html.twig' with {
                        'thumbnailUrl' : asset(vich_uploader_asset(gameItem, 'imageFile'))
                    }%}
                </div>
            </div>
            {{ form_row(form.submit)}}
        </div>
    {{ form_end(form)}}
{% endblock %}
